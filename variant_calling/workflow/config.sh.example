#!/usr/bin/env bash
# ── Course configuration ──────────────────────────────────────────────
# Copy this file to workflow/config.sh and edit as needed:
#   cp workflow/config.sh.example workflow/config.sh
#
# All paths are relative to the repository root.
# ──────────────────────────────────────────────────────────────────────

# Reference genome (FASTA)
REFERENCE="data/input/reference.fasta"

# Aligned reads (BAM, sorted + indexed)
BAM_FILE="data/input/reads_sorted.bam"

# Ploidy (1 = haploid/bacterial, 2 = diploid)
PLOIDY=1

# Output directory
# Set a fixed name so all scripts share the same directory.
# run_all.sh will auto-set a timestamped name if OUTDIR is not already exported.
OUTDIR="${OUTDIR:-outputs/run_latest}"

# ── Variant filtering thresholds ──────────────────────────────────────
# Minimum QUAL score for bcftools filter
MIN_QUAL=20

# Minimum read depth (DP)
MIN_DP=5

# Maximum read depth (DP) — excludes pileup artefacts
MAX_DP=200

# ── End of config ────────────────────────────────────────────────────
